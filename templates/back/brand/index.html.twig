{% extends 'back/base.html.twig' %}

{% block title %}
    Les marques
{% endblock %}

{% block body %}
    <h1>Brand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('app_admin_brand_show', {'id': brand.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_brand_edit', {'id': brand.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_brand_new') }}">Create new</a>
{% endblock %}
