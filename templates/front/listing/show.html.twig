{% extends 'front/base.html.twig' %}

{% block title %}{{ listing.title }}{% endblock %}

{% block body %}
    <div class="text-center my-3">
        <h1>{{ listing.title }}</h1>
        <img class="mt-3" src="https://picsum.photos/200" alt="Photo de l'offre {{ listing.title }}">
    </div>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ listing.description }}</td>
            </tr>
            <tr>
                <th>Année de production</th>
                <td>{{ listing.producedYear }}</td>
            </tr>
            <tr>
                <th>Kilométrage</th>
                <td>{{ listing.mileage }} km</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ listing.price }} €</td>
            </tr>
            <tr>
                <th>Publiée le </th>
                <td>{{ listing.createdAt ? listing.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_listing_index') }}">Retour à la liste</a>

    <a href="{{ path('app_listing_edit', {'id': listing.id}) }}">Modifier</a>

    {{ include('front/listing/_delete_form.html.twig') }}
{% endblock %}
